generator client {
  provider = "prisma-client"
  output   = "../src/common/database/infrastructure/prisma-client"
  engineType             = "client"
  runtime                = "nodejs"
  moduleFormat           = "esm"
  generatedFileExtension = "ts"
  importFileExtension    = "ts"
}

datasource db {
  provider = "postgresql"
  schemas  = ["example"]
}

generator erd {
  provider = "prisma-erd-generator"
  output = "../../DATABASE_README.md"
}