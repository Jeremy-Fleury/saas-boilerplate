{
	"$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
	"extends": "//",
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!dist", "!node_modules", "!prisma", "!**/prisma-client", "!openapi.json"]
	},
	"linter": {
		"domains": {
			"project": "all",
			"test": "all"
		},
		"rules": {
			"style": {
				"useNamingConvention": {
					"level": "error",
					"options": {
						"conventions": [
							{
								"match": "I(.+)",
								"selector": { "kind": "interface" }
							},
							{
								"match": "T(.+)",
								"selector": { "kind": "typeAlias" }
							},
							{
								"match": "E(.+)",
								"selector": { "kind": "enum" }
							},
							{
								"formats": ["PascalCase"],
								"selector": { "kind": "class" }
							},
							{
								"formats": ["PascalCase"],
								"selector": { "kind": "enumMember" }
							},
							{
								"match": "_(.+)",
								"selector": { "kind": "classMember", "modifiers": ["private"] }
							},
							{
								"match": "_(.+)",
								"selector": { "kind": "classMember", "modifiers": ["protected"] }
							},
							{
								"formats": ["CONSTANT_CASE"],
								"selector": { "kind": "classProperty", "modifiers": ["static", "readonly"] }
							},
							{
								"formats": ["CONSTANT_CASE", "camelCase"],
								"selector": { "kind": "classMember" }
							},
							{
								"formats": ["camelCase"],
								"selector": { "kind": "function" }
							},
							{
								"formats": ["CONSTANT_CASE", "camelCase"],
								"selector": { "kind": "const" }
							},
							{
								"formats": ["camelCase"],
								"selector": { "kind": "variable" }
							},
							{
								"formats": ["camelCase"],
								"selector": { "kind": "functionParameter" }
							},
							{
								"formats": ["camelCase"],
								"selector": { "kind": "catchParameter" }
							},
							{
								"formats": ["camelCase"],
								"selector": { "kind": "indexParameter" }
							},
							{
								"formats": ["PascalCase"],
								"match": "T(.+)",
								"selector": { "kind": "typeParameter" }
							},
							{
								"formats": ["camelCase"],
								"selector": { "kind": "objectLiteralMember" }
							},
							{
								"formats": ["PascalCase"],
								"selector": { "kind": "namespaceLike" }
							},
							{
								"formats": ["PascalCase"],
								"selector": { "kind": "importAlias" }
							},
							{
								"formats": ["PascalCase"],
								"selector": { "kind": "exportAlias" }
							},
							{
								"match": ".*"
							}
						]
					}
				}
			}
		}
	},
	"root": false
}
