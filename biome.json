{
	"$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							{ "source": ":PACKAGE:", "type": false },
							":PACKAGE:",
							":BLANK_LINE:",
							":NODE",
							{ "source": ":NODE:", "type": false },
							":BLANK_LINE:",
							{ "source": [":ALIAS:"], "type": false },
							":ALIAS:",
							":BLANK_LINE:",
							"**"
						]
					}
				},
				"useSortedAttributes": "on",
				"useSortedKeys": "on"
			}
		},
		"enabled": true
	},
	"files": {
		"ignoreUnknown": true,
		"includes": ["**", "!**/.turbo"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 4,
		"lineEnding": "lf",
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "always",
			"bracketSameLine": false,
			"bracketSpacing": true,
			"quoteProperties": "asNeeded",
			"quoteStyle": "double",
			"semicolons": "always",
			"trailingCommas": "all"
		},
		"parser": {
			"unsafeParameterDecoratorsEnabled": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"trailingCommas": "none"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"complexity": {
				"noExcessiveLinesPerFunction": {
					"level": "error",
					"options": {
						"maxLines": 50,
						"skipBlankLines": true
					}
				},
				"noStaticOnlyClass": "off",
				"noUselessCatch": "error"
			},
			"correctness": {
				"noUndeclaredVariables": "error",
				"useImportExtensions": "off"
			},
			"nursery": {
				"noImportCycles": "error",
				"noUselessUndefined": "error",
				"useMaxParams": {
					"level": "error",
					"options": {
						"max": 8
					}
				}
			},
			"performance": {
				"noAccumulatingSpread": "error",
				"noAwaitInLoops": "error",
				"noDelete": "error",
				"noDynamicNamespaceImportAccess": "error"
			},
			"style": {
				"noDefaultExport": "error",
				"noEnum": "error",
				"noMagicNumbers": "error",
				"noNestedTernary": "error",
				"noNonNullAssertion": "error",
				"noProcessEnv": "error",
				"noRestrictedGlobals": {
					"options": {
						"deniedGlobals": {
							"undefined": "Interdit : utilise null (absence) ou une valeur. undefined est réservé au non-initialisé."
						}
					}
				},
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"lodash": "Using lodash is forbidden"
						},
						"patterns": [
							{
								"group": ["../**"],
								"message": "Imports from parent directories are forbidden. Use aliases for imports."
							}
						]
					}
				},
				"useConsistentMemberAccessibility": {
					"level": "error",
					"options": {
						"accessibility": "explicit"
					}
				},
				"useImportType": {
					"level": "error",
					"options": {
						"style": "separatedType"
					}
				},
				"useThrowOnlyError": "error"
			},
			"suspicious": {
				"noApproximativeNumericConstant": "error",
				"noAssignInExpressions": "error",
				"noConsole": "error",
				"noConstEnum": "error",
				"noDoubleEquals": "error",
				"noEvolvingTypes": "error",
				"noExplicitAny": "error",
				"noExportsInTest": "error",
				"noFocusedTests": "error",
				"noGlobalAssign": "error",
				"noImplicitAnyLet": "error",
				"noLabelVar": "error",
				"noSkippedTests": "error",
				"noTsIgnore": "error",
				"noUnassignedVariables": "error",
				"noUnsafeNegation": "error",
				"noVar": "error",
				"useAwait": "error",
				"useErrorMessage": "error",
				"useGetterReturn": "error",
				"useNumberToFixedDigitsArgument": "error",
				"useStrictMode": "error"
			}
		}
	}
}
