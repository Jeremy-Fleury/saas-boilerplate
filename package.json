{
	"description": "Monorepo for SaaS boilerplate",
	"devDependencies": {
		"@biomejs/biome": "2.3.2",
		"@commitlint/cli": "20.1.0",
		"@commitlint/config-conventional": "20.0.0",
		"@mermaid-js/mermaid-cli": "11.12.0",
		"cspell": "9.2.2",
		"husky": "9.1.7",
		"turbo": "2.7.3",
		"typescript": "5.9.3"
	},
	"engines": {
		"node": ">=24.0.0",
		"pnpm": ">=10.0.0"
	},
	"name": "@jfleury/saas-boilerplate",
	"packageManager": "pnpm@10.0.0",
	"scripts": {
		"biome:migrate": "biome migrate --write",
		"build": "turbo run build",
		"check": "biome check & tsc --noEmit",
		"check:fix": "biome check --write",
		"cspell": "cspell \"src/**/*.ts\"",
		"dev": "turbo run dev",
		"prepare": "husky"
	}
}
